 <a class="post_page_post" href="/users/<%= @user.id %>/posts/<%= post.id %>">
        <span class="post_post_title"><%= post.title %></span>
        <p class="post_post_text"> <%= post.text %> </p>
        <div class="post_post_interactions">
        <p><%= pluralize(post.CommentsCounter, "comment") %></p> 
        <p>, <%= pluralize(post.LikesCounter, "like") %></p>
    </div>
    </a>
    <ul class="post_page_comments">
        <% post.recent_comments.each do |comment| %>
            <li class="post_page_comment"> <%= comment.user.name %> : <%= comment.text %> </li> 
        <% end %>
    </ul>
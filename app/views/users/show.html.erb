<div class="user_page">
    <div class="user_page_username">
        <img class="user_page_image" src="<%= @user.photo %>" alt="<%= @user.name %>">
        <div class="user_page_detail">
            <p> <%= @user.name %> </p>
            <p class="user_posts_count">Number of posts: <%= @user.PostsCounter %></p>
        </div>
    </div>
    <div class="user_page_bio">
        <span class="bio_header">Bio</span>
        <p class="user_bio"><%= @user.bio %> </p>
    </div>
    <div class="user_page_posts">
        <%= render partial: "posts" %>
    </div>
        <%= link_to user_posts_path(@user) do %>
        <button style="width: 100px; height: 40px; margin: 20px 0;"> See all posts </button>
      <% end%>
</div>